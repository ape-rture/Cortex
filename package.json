{
  "name": "cortex",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "node scripts/validate-routing-config.mjs",
    "gm": "node --import tsx src/cli/gm.ts",
    "test:unit": "node --import tsx --test src/**/*.test.ts",
    "digest": "node --import tsx src/cli/digest.ts",
    "prep": "node --import tsx src/cli/prep.ts",
    "content": "node --import tsx src/cli/content.ts",
    "project": "node --import tsx src/cli/project.ts",
    "scrape": "node --import tsx src/cli/scrape.ts",
    "dev:ui": "node --import tsx src/ui/server.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.72.1",
    "@hono/node-server": "^1.14.0",
    "@mozilla/readability": "^0.6.0",
    "cheerio": "^1.2.0",
    "dotenv": "^17.2.3",
    "googleapis": "^171.1.0",
    "hono": "^4.6.12",
    "linkedom": "^0.18.12",
    "openai": "^6.17.0",
    "playwright-core": "^1.58.1",
    "robots-parser": "^3.0.1"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
